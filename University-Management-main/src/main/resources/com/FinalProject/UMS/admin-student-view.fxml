<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.FinalProject.UMS.AdminStudentController"
      spacing="20" alignment="CENTER" style="-fx-padding: 30; -fx-background-color: #f4f4f4;">

    <!-- Buttons for Student Management -->
    <Button text="Add Student" onAction="#handleAddStudent" prefWidth="200" prefHeight="40"
            style="-fx-font-size: 14px; -fx-background-color: #4CAF50; -fx-text-fill: white;"/>
    <Button text="Edit Student" onAction="#handleEditStudent" prefWidth="200" prefHeight="40"
            style="-fx-font-size: 14px; -fx-background-color: #2196F3; -fx-text-fill: white;"/>
    <Button text="Delete Student" onAction="#handleDeleteStudent" prefWidth="200" prefHeight="40"
            style="-fx-font-size: 14px; -fx-background-color: #f44336; -fx-text-fill: white;"/>
    <Button text="View Student Profile" onAction="#handleViewStudentProfile" prefWidth="200" prefHeight="40"
            style="-fx-font-size: 14px; -fx-background-color: #FF9800; -fx-text-fill: white;"/>
    <Button text="Manage Enrollments" onAction="#handleManageEnrollments" prefWidth="200" prefHeight="40"
            style="-fx-font-size: 14px; -fx-background-color: #9C27B0; -fx-text-fill: white;"/>
    <Button text="Academic Progress Tracking" onAction="#handleAcademicProgressTracking" prefWidth="200" prefHeight="40"
            style="-fx-font-size: 14px; -fx-background-color: #009688; -fx-text-fill: white;"/>
    <Button text="Tuition Management" onAction="#handleTuitionManagement" prefWidth="200" prefHeight="40"
            style="-fx-font-size: 14px; -fx-background-color: #607D8B; -fx-text-fill: white;"/>

    <!-- Back Button -->
    <Button fx:id="backButton" text="Back to Main Menu" onAction="#handleBackButton" prefWidth="200" prefHeight="40"
            style="-fx-font-size: 14px; -fx-background-color: #555555; -fx-text-fill: white;"/>

</VBox>
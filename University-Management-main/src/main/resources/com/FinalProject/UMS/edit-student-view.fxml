<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      spacing="10" alignment="CENTER" style="-fx-padding: 20; -fx-background-color: #f4f4f4;">

    <Label text="Edit Student" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <TextField promptText="Student ID" prefWidth="200"/>
    <TextField promptText="First Name" prefWidth="200"/>
    <TextField promptText="Last Name" prefWidth="200"/>
    <TextField promptText="Email" prefWidth="200"/>
    <TextField promptText="Phone Number" prefWidth="200"/>

    <Button text="Update" prefWidth="100" prefHeight="30"
            style="-fx-font-size: 14px; -fx-background-color: #2196F3; -fx-text-fill: white;"/>
    <Button text="Cancel" prefWidth="100" prefHeight="30"
            style="-fx-font-size: 14px; -fx-background-color: #f44336; -fx-text-fill: white;"/>

</VBox>
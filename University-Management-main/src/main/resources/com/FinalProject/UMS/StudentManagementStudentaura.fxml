<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="291.0" prefWidth="543.0" spacing="10" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1">
    <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Student Management - Student Panel" />

    <HBox alignment="CENTER" spacing="10">
        <VBox alignment="CENTER" spacing="5">
            <Label text="Profile Photo" />
            <ImageView fx:id="profileImageView" fitHeight="100" fitWidth="100" />
            <Button fx:id="uploadPhotoBtn" text="Upload Photo" />
        </VBox>

        <VBox spacing="5">
            <Label text="Student ID:" />
            <TextField fx:id="studentIdField" editable="false" />
            <Label text="Full Name:" />
            <TextField fx:id="nameField" editable="false" />
            <Label text="Email:" />
            <TextField fx:id="emailField" editable="false" />
            <Label text="Current Semester:" />
            <TextField fx:id="semesterField" editable="false" />
        </VBox>
    </HBox>

    <HBox alignment="CENTER" spacing="10">
        <Button fx:id="editProfileBtn" text="Edit Profile" />
        <Button fx:id="viewCoursesBtn" text="View Enrolled Courses" />
        <Button fx:id="viewGradesBtn" text="View Grades" />
        <Button fx:id="viewTuitionBtn" text="View Tuition Status" />
    </HBox>
</VBox>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      spacing="10" alignment="CENTER" style="-fx-padding: 20; -fx-background-color: #f4f4f4;">

    <Label text="View Student Profile" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <TextField promptText="Student ID" prefWidth="200"/>

    <Button text="View Profile" prefWidth="100" prefHeight="30"
            style="-fx-font-size: 14px; -fx-background-color: #FF9800; -fx-text-fill: white;"/>
    <Button text="Cancel" prefWidth="100" prefHeight="30"
            style="-fx-font-size: 14px; -fx-background-color: #555555; -fx-text-fill: white;"/>

</VBox>
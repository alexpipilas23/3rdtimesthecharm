<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml" fx:controller="com.FinalProject.UMS.FacultyEditController">

    <Label text="Edit Faculty" />

    <TextField fx:id="nameField" promptText="Name" />
    <TextField fx:id="emailField" promptText="Email" />
    <TextField fx:id="departmentField" promptText="Department" />

    <Button text="Save Changes" onAction="#saveFaculty"/>
    <Button text="Cancel" onAction="#goBack"/>
</VBox>
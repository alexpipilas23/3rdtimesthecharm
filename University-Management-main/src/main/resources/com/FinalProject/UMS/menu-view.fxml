<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.FinalProject.UMS.MenuController">

    <left>
        <!-- Increase the width here -->
        <ScrollPane prefWidth="250.0" style="-fx-background-color: #e9ecef;">
            <content>
                <VBox fx:id="menuVBox" alignment="TOP_LEFT" spacing="10.0" style="-fx-background-color: #f8f9fa;">
                    <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                    </padding>
                    <children>
                        <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #343a40;" text="University Management System">
                            <font>
                                <Font size="16.0" />
                            </font>
                        </Label>

                        <Separator prefWidth="250.0" />

                        <Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #495057; -fx-padding: 5px 0 0 0;" text="Dashboard" />
                        <Button onAction="#handleDashboard" style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 5px 10px; -fx-border-radius: 5px; -fx-cursor: hand;" text="View Dashboard" />

                        <Separator prefWidth="250.0" />

                        <Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #495057; -fx-padding: 5px 0 0 0;" text="Subject Management" />
                        <Button fx:id="subjectManagementButton" onAction="#handleSubjectManagement" style="-fx-background-color: #5fe4c0; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 5px 10px; -fx-border-radius: 5px; -fx-cursor: hand;" text="Manage Subjects" />

                        <Separator prefWidth="250.0" />

                        <Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #495057; -fx-padding: 5px 0 0 0;" text="Course Management" />
                        <Button fx:id="courseManagementButton" onAction="#handleCourseManagement" style="-fx-background-color: #63dbff; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 5px 10px; -fx-border-radius: 5px; -fx-cursor: hand;" text="Manage Courses" />

                        <Separator prefWidth="250.0" />

                        <Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #495057; -fx-padding: 5px 0 0 0;" text="Student Management" />
                        <Button fx:id="studentManagementButton" onAction="#handleStudentManage" style="-fx-background-color: #1a53d5; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 5px 10px; -fx-border-radius: 5px; -fx-cursor: hand;" text="Manage Students" />

                        <Separator prefWidth="250.0" />

                        <Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #495057; -fx-padding: 5px 0 0 0;" text="Faculty Management" />
                        <Button fx:id="facultyManagementButton" onAction="#handleFacultyManagement" style="-fx-background-color: #5639df; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 5px 10px; -fx-border-radius: 5px; -fx-cursor: hand;" text="Manage Faculty" />
                        <Button onAction="#handleAssignFacultyCourses" style="-fx-background-color: #bd3ced; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 5px 10px; -fx-border-radius: 5px; -fx-cursor: hand;" text="Assign Courses" />

                        <Separator prefWidth="250.0" />

                        <Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #495057; -fx-padding: 5px 0 0 0;" text="Event Management" />
                        <Button fx:id="eventManagementButton" onAction="#handleEventManagement" style="-fx-background-color: #71123b; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 5px 10px; -fx-border-radius: 5px; -fx-cursor: hand;" text="Manage Events" />

                        <Separator prefWidth="250.0" />

                        <Button onAction="#handleViewProfile" style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 5px 10px; -fx-border-radius: 5px; -fx-cursor: hand;" text="View Profile" />
                        <Button onAction="#handleLogout" style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 5px 10px; -fx-border-radius: 5px; -fx-cursor: hand;" text="Logout" />
                    </children>
                </VBox>
            </content>
        </ScrollPane>
    </left>
   <right>
      <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER" />
   </right>


</BorderPane>
